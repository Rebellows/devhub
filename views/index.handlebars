  <div id="top-container" class="container-fluid">
    <h1 id="main-title" class="text-center">Find your dream job</h1>
    <p id="main-subtitle" class="text-center">We are the site with most jobs in the market, focusing in the IT environment</p>
    <form id="search-form" class="form-inline form-row" action="/" method="GET">
      <div class="form-group col-md-10">
        <input type="text" class="form-control" id="job" name="job" placeholder="Type the job here">
      </div>
      <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Find</button>
      </div>
    </form>
  </div>
  <main>
    <div id="jobs-container" class="container">
      <div class="row">
        <div class="col-md-12">
          {{#if search}}
            <h2 id="job-list-title">Finding jobs that have: {{search}}</h2>
          {{else}}
            <h2 id="job-list-title">See the jobs in highlights</h2>
          {{/if}}
          <ul id="job-list" class="list-group">
            {{#each jobs}}
              <li class="list-group-item {{#if dataValues.new_job }} new-job {{/if}}">
                <img src="/img/company.svg" alt="Company logo">
                <p class="jobdesc">{{dataValues.company}}</p>
                <h2 class="jobdesc">{{dataValues.title}}</h2>
                <p class="jobdesc">R$ {{dataValues.salary}}</p>
                <span class="new-job-label">NEW</span>
                <a class="btn btn-primary" href="/jobs/view/{{dataValues.id}}">See job</a>
              </li>      
          {{/each}}          
          </ul>
        </div>
      </div>
    </div>
  </main>
